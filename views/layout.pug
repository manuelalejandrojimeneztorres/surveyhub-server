doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    title #{title} - API Overview
    link(rel="stylesheet" href="/stylesheets/style.css")
    link(rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css")
    script(src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous")
  body
    header(class="bg-dark text-white text-center py-4")
      h1 #{title}
      p.lead #{description}
    main.container.mt-5
      block content
    footer(class="bg-light text-center py-3 mt-5 border-top")
      p Copyright &copy; #{new Date().getFullYear()} #{companyName} All rights reserved. | Powered by Node.js, Express.js, Sequelize, MySQL, and Pug.
      p
        a(href=privacyLink class="text-decoration-none") Privacy Policy
        | &nbsp;|&nbsp;
        a(href=termsLink class="text-decoration-none") Terms of Service
